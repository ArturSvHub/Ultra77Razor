@page
@using UpakUtilitiesLibrary.Utility.Extentions
@model Ultra77Razor.Areas.Admin.Pages.Product.DeleteModel
<form method="post" enctype="multipart/form-data">

    <input asp-for="Product.Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Удалить товар</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" disabled class="form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.Description" disabled class="form-control summernote"></textarea>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.RetailPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.RetailPrice" disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.PurchasePrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.PurchasePrice" disabled class="form-control" />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input  asp-for="Product.CategoryId" disabled class="form-control" />
                                
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                               
                            <button type="submit" class="btn btn-danger w-100" >Удалить</button>
                        </div>
                        <div class="col">
                            <a asp-page="Index" class="btn btn-success w-100">
                                Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
<script>
        $(document).ready(function() {
            $('.summernote').summernote({
                height:200,
                lang:'ru-RU',
                disable,
                toolbar: [
    // [groupName, [list of button]]
    ['style', ['bold', 'italic', 'underline', 'clear']],
    ['font', ['strikethrough', 'superscript', 'subscript']],
    ['fontsize', ['fontsize']],
    ['color', ['color']],
    ['para', ['ul', 'ol', 'paragraph']],
    ['height', ['height']]
  ]
            });
    });
</script>
}