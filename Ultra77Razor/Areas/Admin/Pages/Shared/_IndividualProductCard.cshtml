@using UpakUtilitiesLibrary
@using UpakUtilitiesLibrary.Utility.Extentions;
@model UpakModelsLibrary.Models.Product


        <div class="catalog__card card filter @Model.Category.Name.Replace(' ','_')">
            <!-- Card-->
            <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                <div class="card-body px-3 pt-3 pb-1">
                    <div class="col-12"><label class="float-left">@Model.Name</label></div>
                    <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:c0}",Model.RetailPrice)</span> - шт</label> </div>
                </div>
                <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@Model.Image.DataArrayToImageUrl()" alt="Card image cap">
                <div class="card-body p-1 px-3 row">
                    <div class="col-6">
                        <span class="p-2 border w-100"></span>
                    </div>
                <div class="col-6 border-0">
                   <a asp-action="Details" asp-route-id="@Model.Category.Id"style="color:black" class="p-2 w-100">@Model.Category.Name</a>
                </div>
                <div class="col-12 pt-2" style="font-size:5px; text-align:justify" >
                    <p>@Html.Raw(Model.ShortDesc)</p>
                </div>
                <div class="col-12 p-1">
                    <a asp-action="Product" asp-route-id=@Model.Id class="btn btn-dark p-2" style="height:40px">Подробнее</a>
                </div>
                </div>
            </div>
        </div>
