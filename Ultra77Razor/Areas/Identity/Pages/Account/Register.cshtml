@page
@using Ultra77Razor
@model RegisterModel
    @if(User.IsInRole(UpakUtilitiesLibrary.WebConstants.AdminRole.ToString()))
    {
        ViewData["Title"] = "Регистрация администратора";
    }
    else{
        ViewData["Title"] = "Регистрация";
    }

    <div class="auth-wrapper">
    <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="auth-header">
            <h1>@ViewData["Title"]</h1>
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="auth-main">
            <h3>Создайте новую учетную запись.</h3>

            <div class="auth-line">
                <div> <label asp-for="Input.FullName"></label></div>
                <div> <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true"/></div>
            </div>
            <span asp-validation-for="Input.FullName" class="text-danger" ></span>
            <div class="auth-line">
                <div> <label asp-for="Input.Email"></label></div>
                <div> <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/></div>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger" ></span>
            <div class="auth-line">
                <div> <label asp-for="Input.Password"></label></div>
                <div> <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/></div>
            </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="auth-line">
                <div> <label asp-for="Input.ConfirmPassword"></label></div>
                <div> <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/></div>
            </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <hr class="hr-shelf">
            @if(User.IsInRole(WebConstants.AdminRole))
    {
         <button id="registerSubmit" type="submit" class="submit">Создать администратора</button>
    }
    else{
         <button id="registerSubmit" type="submit" class="submit auth-button">Зарегестрироваться</button>
    }
        </div>
        
        
    </form>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
