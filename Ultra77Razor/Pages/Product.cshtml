@page
@using UpakUtilitiesLibrary.Utility.Extentions
@model Ultra77Razor.Pages.ProductModel
<div class="">
    <form method="post" >
      <input asp-for="@Model.Product.Id" hidden />
        <div class="container backgroundWhite pt-4"  >
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning" >@string.Format("{0:c0}",Model.Product.RetailPrice) - шт</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.Product.Image.DataArrayToImageUrl()" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="p-3 border" style="background-color:lavenderblush">@Model.Product.Category.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square btn-lg" style="height:50px;">Вернуться</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                           @if(Model.ExistsInCart)
                           {
                               <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-success btn-square btn-lg" style="height:50px;">Удалить из корзины</a>
                           }else
                           {
                            <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-info btn-lg" style="height:50px;">Добавить в корзину</button>
                           }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
