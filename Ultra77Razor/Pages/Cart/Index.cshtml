@page
@using UpakUtilitiesLibrary.Utility.Extentions
@using System.ComponentModel
@using Ultra77Razor.Components
@model Ultra77Razor.Pages.Cart.IndexModel

<form method="post" class="cart-wrapper">
        <div class="cart-header">
          <a asp-page="./Index" class="head-submit">
            <div class="triangle triangle-left"></div>
            <p>На главную</p>
          </a>
          <h3>Ваша корзина</h3>
          <a href='javascript:history.go(-1)' class="head-submit">
              <p>Вернуться</p>
            <div class="triangle triangle-right"></div>
          </a>
        </div>
        <div class="cart-content">
            @if(Model.ProductList?.Count()>0)
            {
                float total = 0.0f;
        @for (int i=0;i<Model.ProductList.Count;i++)
        {
            <input type="hidden" asp-for="ProductList[i].Id"/>
            <div class="cart-product">

                <div class="product-dictionary">
                    <p>@Model.ProductList[i].Name</p>
                </div>
                <div class="cart-card">
                    <div class="cart-product-image">
                        <img src="@Model.ProductList[i].Image!.DataArrayToImageUrl()" alt="">
                    </div>
                    <div class="number-wrapper">
                        <div class="number cart-number">
                            <div class="number-input">
                                <input asp-for="@Model.ProductList[i].TempCount" id="inputNumber" type="number" min="1"/>
                            </div>
                            <div class="number-label">
                                <p>ШТ.</p>
                            </div>
                            <div class="number-buttons">
                                <button class="number-minus" type="button"
                                        onclick="this.parentNode.parentNode.querySelector('input[type=number]').stepUp();">
                                    <P>+</P>
                                </button>
                                <button class="number-plus" type="button"
                                        onclick="this.parentNode.parentNode.querySelector('input[type=number]').stepDown(); ">
                                    <p>-</p>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="price-one" id="priceOne">@String.Format("{0:c}",Model.ProductList[i].RetailPrice)</div>
                    <div class="price-percount"id="pricePerCount">@String.Format("{0:c}",Model.ProductList[i].RetailPrice*Model.ProductList[i].TempCount)</div>
                    <a asp-page-handler="Delete" class="delete-submit submit-button">Удалить</a>
                </div>
            </div>
            if (Model.ProductList[i].RetailPrice != null)
            {
                total += (float)Model.ProductList[i].RetailPrice * Model.ProductList[i].TempCount;
            }
            
        }
                <div class="cart-summary">
                    <p>Итого</p>
                    <div class="total">
                        <div class="price-total">@String.Format("{0:c}",total)</div>
                        <button asp-page-handler="Update" class="confirm-submit submit-button">Обновить</button>
                        <button type="submit" class="confirm-submit submit-button">Оформить заказ</button>
                    </div>
                </div>
           }
        else
        {
            <p>Корзина пуста</p>
        }
        </div>
        <div class="cart-footer">
          <p></p>
        </div>
      </form>
      
       

