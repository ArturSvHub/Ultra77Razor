@inject MssqlContext _context
@using UpakDataAccessLibrary.DataContext
@using UpakModelsLibrary.Models
 
<h1>Counter</h1>

<br />
<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-info">Список заказов</h2>
        </div>
       
    </div>


    <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Имя</th>
                <th>Номер телефона</th>
                <th>Email</th>
                <th></th>
            </tr>
            @foreach (var item in _context.OrderHeaders)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <th></th>
            </tr>
            }
            
        </thead>
    </table>

</div>
@code {

    public List<OrderHeader> Data{ get; set; }

    
}